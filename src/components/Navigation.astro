---
import { companyData } from '@content/company-data';
import { services } from '@content/company-data';

const navLinks = [
  { href: '/', label: 'Startseite', ariaLabel: 'Zur Startseite' },
  { href: '/leistungen/', label: 'Leistungen', ariaLabel: 'Unsere Leistungen', hasDropdown: true },
  { href: '/projekte/', label: 'Projekte', ariaLabel: 'Unsere Projekte' },
  { href: '/kontakt/', label: 'Kontakt', ariaLabel: 'Kontakt aufnehmen' },
];

const currentPath = Astro.url.pathname;

function isActive(href: string) {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-neutral-200 shadow-soft">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-20 lg:h-24" aria-label="Hauptnavigation">
      <!-- Logo -->
      <a 
        href="/" 
        class="flex items-center font-bold text-neutral-900 hover:text-primary-600 transition-colors -ml-2"
        aria-label={`${companyData.name} - Zur Startseite`}
      >
        <img 
          src="/images/logo.jpeg" 
          alt="Diell Dienstleistungen Logo" 
          class="h-20 w-auto object-contain"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {navLinks.map((link) => (
          <div class="relative group">
            {link.hasDropdown ? (
              <>
                <button 
                  class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors flex items-center gap-1 ${
                    isActive(link.href) 
                      ? 'text-primary-700 bg-primary-50' 
                      : 'text-neutral-700 hover:text-primary-600 hover:bg-neutral-50'
                  }`}
                  aria-expanded="false"
                  aria-haspopup="true"
                >
                  {link.label}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <!-- Dropdown Menu -->
                <div class="absolute top-full left-0 mt-1 w-72 bg-white rounded-lg shadow-card border border-neutral-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <div class="py-2">
                    <a 
                      href="/leistungen/" 
                      class="block px-4 py-2 text-sm font-medium text-neutral-900 hover:bg-primary-50 hover:text-primary-700"
                    >
                      Alle Leistungen
                    </a>
                    <hr class="my-2 border-neutral-100" />
                    {services.map((service) => (
                      <a 
                        href={`/leistungen/${service.slug}/`}
                        class="block px-4 py-2 text-sm text-neutral-600 hover:bg-primary-50 hover:text-primary-700"
                      >
                        {service.shortTitle}
                      </a>
                    ))}
                  </div>
                </div>
              </>
            ) : (
              <a 
                href={link.href}
                class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${
                  isActive(link.href) 
                    ? 'text-primary-700 bg-primary-50' 
                    : 'text-neutral-700 hover:text-primary-600 hover:bg-neutral-50'
                }`}
                aria-label={link.ariaLabel}
                aria-current={isActive(link.href) ? 'page' : undefined}
              >
                {link.label}
              </a>
            )}
          </div>
        ))}
      </div>
      
      <!-- Desktop CTA -->
      <div class="hidden lg:flex items-center gap-3">
        <a 
          href={`tel:${companyData.phone.replace(/\s/g, '')}`}
          class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-neutral-700 hover:text-primary-600 transition-colors"
          aria-label="Jetzt anrufen"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {companyData.phone}
        </a>
        <a 
          href="/kontakt/"
          class="px-5 py-2.5 text-sm font-medium text-neutral-900 bg-primary-400 hover:bg-primary-500 rounded-lg transition-colors shadow-sm"
          aria-label="Kontakt aufnehmen"
        >
          Angebot anfordern
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-neutral-600 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Menü öffnen"
      >
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>
  </div>
  
  <!-- Mobile Menu -->
  <div 
    id="mobile-menu" 
    class="lg:hidden hidden border-t border-neutral-200 bg-white"
    aria-label="Mobile Navigation"
  >
    <div class="px-4 py-3 space-y-1">
      {navLinks.map((link) => (
        <div>
          {link.hasDropdown ? (
            <>
              <button 
                id="mobile-services-toggle"
                class="w-full flex items-center justify-between px-4 py-3 text-sm font-medium text-neutral-700 hover:bg-neutral-50 rounded-lg transition-colors"
                aria-expanded="false"
                aria-controls="mobile-services-submenu"
              >
                {link.label}
                <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div id="mobile-services-submenu" class="hidden pl-4 mt-1 space-y-1">
                <a 
                  href="/leistungen/"
                  class="block px-4 py-2 text-sm font-medium text-primary-600 hover:bg-primary-50 rounded-lg"
                >
                  Alle Leistungen
                </a>
                {services.map((service) => (
                  <a 
                    href={`/leistungen/${service.slug}/`}
                    class="block px-4 py-2 text-sm text-neutral-600 hover:bg-neutral-50 rounded-lg"
                  >
                    {service.shortTitle}
                  </a>
                ))}
              </div>
            </>
          ) : (
            <a 
              href={link.href}
              class={`block px-4 py-3 text-sm font-medium rounded-lg transition-colors ${
                isActive(link.href) 
                  ? 'text-primary-700 bg-primary-50' 
                  : 'text-neutral-700 hover:bg-neutral-50'
              }`}
              aria-label={link.ariaLabel}
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.label}
            </a>
          )}
        </div>
      ))}
      
      <!-- Mobile Contact -->
      <div class="pt-4 mt-4 border-t border-neutral-200 space-y-3">
        <a 
          href={`tel:${companyData.phone.replace(/\s/g, '')}`}
          class="flex items-center justify-center gap-2 w-full px-4 py-3 text-sm font-medium text-neutral-700 bg-neutral-100 hover:bg-neutral-200 rounded-lg transition-colors"
          aria-label="Jetzt anrufen"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {companyData.phone}
        </a>
        <a 
          href="/kontakt/"
          class="flex items-center justify-center w-full px-4 py-3 text-sm font-medium text-neutral-900 bg-primary-400 hover:bg-primary-500 rounded-lg transition-colors"
          aria-label="Angebot anfordern"
        >
          Angebot anfordern
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  // Mobile menu toggle
  (function() {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const iconOpen = document.getElementById('menu-icon-open');
    const iconClose = document.getElementById('menu-icon-close');
    const servicesToggle = document.getElementById('mobile-services-toggle');
    const servicesSubmenu = document.getElementById('mobile-services-submenu');
    
    let isMenuOpen = false;
    let isServicesOpen = false;
    
    if (menuBtn) {
      menuBtn.addEventListener('click', function() {
        isMenuOpen = !isMenuOpen;
        menuBtn.setAttribute('aria-expanded', isMenuOpen.toString());
        
        if (isMenuOpen) {
          mobileMenu.classList.remove('hidden');
          iconOpen.classList.add('hidden');
          iconClose.classList.remove('hidden');
        } else {
          mobileMenu.classList.add('hidden');
          iconOpen.classList.remove('hidden');
          iconClose.classList.add('hidden');
        }
      });
    }
    
    if (servicesToggle) {
      servicesToggle.addEventListener('click', function() {
        isServicesOpen = !isServicesOpen;
        servicesToggle.setAttribute('aria-expanded', isServicesOpen.toString());
        
        if (isServicesOpen) {
          servicesSubmenu.classList.remove('hidden');
          servicesToggle.querySelector('svg').classList.add('rotate-180');
        } else {
          servicesSubmenu.classList.add('hidden');
          servicesToggle.querySelector('svg').classList.remove('rotate-180');
        }
      });
    }
    
    // Close menu on resize to desktop
    window.addEventListener('resize', function() {
      if (window.innerWidth >= 1024 && isMenuOpen) {
        isMenuOpen = false;
        menuBtn.setAttribute('aria-expanded', 'false');
        mobileMenu.classList.add('hidden');
        iconOpen.classList.remove('hidden');
        iconClose.classList.add('hidden');
      }
    });
  })();
</script>
