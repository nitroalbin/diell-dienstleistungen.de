---
import { companyData, services, additionalServices } from '@content/company-data';

const currentYear = new Date().getFullYear();

const footerLinks = {
  leistungen: services.map(s => ({ label: s.shortTitle, href: `/leistungen/${s.slug}/` })),
  unternehmen: [
    { label: 'Projekte', href: '/projekte/' },
    { label: 'Kontakt', href: '/kontakt/' },
  ],
  rechtliches: [
    { label: 'Impressum', href: '/impressum/' },
    { label: 'Datenschutz', href: '/datenschutz/' },
    { label: 'Cookie-Einstellungen', href: '/cookies/' },
  ],
};
---

<footer class="bg-neutral-900 text-white" role="contentinfo">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center font-bold mb-4 -ml-2">
          <img 
            src="/images/logo.jpeg" 
            alt="Diell Dienstleistungen Logo" 
            class="h-20 w-auto object-contain"
          />
        </a>
        <p class="text-neutral-400 text-sm mb-4">
          Ihr zuverlässiger Partner für Renovierung und Innenausbau in Laichingen und Umgebung. Qualität, Termintreue und faire Preise.
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-2 text-sm">
          <a 
            href={`tel:${companyData.phone.replace(/\s/g, '')}`}
            class="flex items-center gap-2 text-neutral-300 hover:text-primary-400 transition-colors"
            aria-label="Telefonnummer"
          >
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {companyData.phone}
          </a>
          <a 
            href={`mailto:${companyData.email}`}
            class="flex items-center gap-2 text-neutral-300 hover:text-primary-400 transition-colors"
            aria-label="E-Mail"
          >
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {companyData.email}
          </a>
          <div class="flex items-start gap-2 text-neutral-300">
            <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{companyData.address.street}<br/>{companyData.address.postalCode} {companyData.address.city}</span>
          </div>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-neutral-400 mb-4">
          Leistungen
        </h3>
        <ul class="space-y-2">
          {footerLinks.leistungen.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-neutral-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-neutral-400 mb-4">
          Unternehmen
        </h3>
        <ul class="space-y-2">
          {footerLinks.unternehmen.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-neutral-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- Additional Services -->
        <h3 class="text-sm font-semibold uppercase tracking-wider text-neutral-400 mt-6 mb-3">
          Weitere Services
        </h3>
        <ul class="space-y-2">
          {additionalServices.map((service) => (
            <li class="text-sm text-neutral-400">{service.title}</li>
          ))}
        </ul>
      </div>
      
      <!-- Legal & Cookie Settings -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-neutral-400 mb-4">
          Rechtliches
        </h3>
        <ul class="space-y-2 mb-6">
          {footerLinks.rechtliches.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-neutral-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- Cookie Settings Button -->
        <button 
          id="footer-cookie-settings"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-neutral-300 bg-neutral-800 hover:bg-neutral-700 rounded-lg transition-colors"
          aria-label="Cookie-Einstellungen öffnen"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
          </svg>
          Cookie-Einstellungen
        </button>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-neutral-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-neutral-500">
          © {currentYear} {companyData.name}. Alle Rechte vorbehalten.
        </p>
        <p class="text-xs text-neutral-600">
          Inhaber: {companyData.owner} | Steuernummer: {companyData.taxNumber}
        </p>
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  // Footer cookie settings button
  document.getElementById('footer-cookie-settings')?.addEventListener('click', function() {
    if (window.CookieConsent) {
      window.CookieConsent.openModal();
    }
  });
</script>
