---
interface Props {
  quote: string;
  author: string;
  location?: string;
  rating?: number;
  service?: string;
}

const { quote, author, location, rating = 5, service } = Astro.props;

// Generate star rating
const stars = Array.from({ length: 5 }, (_, i) => i < rating);
---

<blockquote class="bg-white rounded-xl p-6 shadow-soft border border-neutral-100 h-full flex flex-col">
  <!-- Stars -->
  <div class="flex items-center gap-1 mb-4" aria-label={`Bewertung: ${rating} von 5 Sternen`}>
    {stars.map((filled) => (
      <svg 
        class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-neutral-300'}`} 
        fill="currentColor" 
        viewBox="0 0 20 20"
        aria-hidden="true"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>
  
  <!-- Quote -->
  <p class="text-neutral-700 leading-relaxed flex-1 mb-4">
    "{quote}"
  </p>
  
  <!-- Author -->
  <footer class="flex items-center gap-3 pt-4 border-t border-neutral-100">
    <!-- Avatar placeholder -->
    <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
      <span class="text-primary-700 font-semibold text-sm">
        {author.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase()}
      </span>
    </div>
    <div>
      <cite class="not-italic font-medium text-neutral-900 text-sm">{author}</cite>
      {(location || service) && (
        <p class="text-xs text-neutral-500">
          {location && <span>{location}</span>}
          {location && service && <span> â€¢ </span>}
          {service && <span>{service}</span>}
        </p>
      )}
    </div>
  </footer>
</blockquote>
