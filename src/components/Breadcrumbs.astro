---
interface Breadcrumb {
  name: string;
  url: string;
}

interface Props {
  items: Breadcrumb[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="py-4">
  <ol class="flex flex-wrap items-center gap-2 text-sm">
    <li>
      <a 
        href="/" 
        class="text-neutral-500 hover:text-primary-600 transition-colors flex items-center gap-1"
        aria-label="Startseite"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <span class="hidden sm:inline">Startseite</span>
      </a>
    </li>
    
    {items.map((item, index) => {
      const isLast = index === items.length - 1;
      return (
        <>
          <li aria-hidden="true">
            <svg class="w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            {isLast ? (
              <span class="font-medium text-neutral-900" aria-current="page">
                {item.name}
              </span>
            ) : (
              <a 
                href={item.url}
                class="text-neutral-500 hover:text-primary-600 transition-colors"
              >
                {item.name}
              </a>
            )}
          </li>
        </>
      );
    })}
  </ol>
</nav>
