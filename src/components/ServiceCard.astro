const iconPath = icons[icon] || icons['tools'];
---

<a 
  href={href}
  class="group block bg-white rounded-xl shadow-soft border border-neutral-100 overflow-hidden hover:shadow-card transition-all duration-300 hover:-translate-y-1"
  aria-label={`Mehr erfahren Ã¼ber ${title}`}
>
  <!-- Image or Icon Placeholder -->
  <div class="aspect-video bg-gradient-to-br from-primary-100 to-accent-100 flex items-center justify-center relative overflow-hidden">
    {image ? (
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
        width="400"
        height="225"
      />
    ) : (
      <div class="w-16 h-16 bg-white rounded-xl shadow-soft flex items-center justify-center">
        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconPath} />
        </svg>
      </div>
    )}
    <!-- Hover overlay -->
    <div class="absolute inset-0 bg-primary-400/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
  </div>
  
  <!-- Content -->
  <div class="p-5">
    <h3 class="text-lg font-semibold text-neutral-900 mb-2 group-hover:text-primary-700 transition-colors">
      {title}
    </h3>
    <p class="text-sm text-neutral-600 mb-4 line-clamp-2">
      {description}
    </p>
    <span class="inline-flex items-center text-sm font-medium text-primary-600 group-hover:text-primary-700">
      Mehr erfahren
      <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </span>
  </div>
</a>
