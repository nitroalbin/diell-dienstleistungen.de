---
import Layout from '@layouts/Layout.astro';
import ServiceCard from '@components/ServiceCard.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import PhoneButton from '@components/PhoneButton.astro';
import { services, additionalServices, companyData } from '@content/company-data';

const pageTitle = 'Leistungen | Renovierung & Innenausbau Laichingen | Diell Dienstleistungen';
const pageDescription = 'Alle Renovierungsleistungen auf einen Blick: Trockenbau, Gipskarton-Montage, Spachtelarbeiten, Flurgestaltung und mehr in Laichingen. Jetzt informieren!';

const breadcrumbs = [
  { name: 'Leistungen', url: '/leistungen/' }
];
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  breadcrumbs={breadcrumbs}
>
  <!-- Header -->
  <section class="bg-neutral-900 py-12 lg:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbs} />
      
      <div class="mt-6 text-center max-w-2xl mx-auto">
        <h1 class="text-3xl lg:text-4xl font-bold text-white mb-4">
          Unsere Leistungen
        </h1>
        <p class="text-neutral-400">
          Professionelle Renovierungs- und Ausbauarbeiten für Privat- und Gewerbekunden 
          in Laichingen und Umgebung. Qualität aus Meisterhand.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Services -->
  <section class="py-16 lg:py-20" aria-labelledby="main-services-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="main-services-heading" class="text-2xl font-bold text-neutral-900 text-center mb-12">
        Hauptleistungen
      </h2>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((service) => {
          const imageMap = {
            'trockenbau-unterkonstruktion': '/images/trockenbau.jpeg',
            'flurgestaltung': '/images/flurgestaltung.jpeg',
            'gipskarton-led': '/images/gipskarton-led.jpeg',
            'spachtelarbeiten': '/images/spachtelarbeiten.jpeg',
            'renovierung-innenausbau': '/images/renovierung.jpeg',
          };
          return (
            <ServiceCard 
              title={service.shortTitle}
              description={service.description}
              href={`/leistungen/${service.slug}/`}
              icon={service.icon}
              image={imageMap[service.slug]}
            />
          );
        })}
      </div>
    </div>
  </section>

  <!-- Additional Services -->
  <section class="py-16 lg:py-20 bg-neutral-50" aria-labelledby="additional-services-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="additional-services-heading" class="text-2xl font-bold text-neutral-900 text-center mb-12">
        Zusätzliche Services
      </h2>
      
      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {additionalServices.map((service) => (
          <div class="bg-white rounded-xl p-6 shadow-soft border border-neutral-100 text-center">
            <div class="w-14 h-14 mx-auto mb-4 bg-accent-100 rounded-xl flex items-center justify-center">
              {service.icon === 'wrench' && (
                <svg class="w-7 h-7 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {service.icon === 'leaf' && (
                <svg class="w-7 h-7 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
              {service.icon === 'sparkles' && (
                <svg class="w-7 h-7 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
              )}
            </div>
            <h3 class="font-semibold text-neutral-900 mb-2">{service.title}</h3>
            <p class="text-sm text-neutral-600">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 lg:py-20" aria-labelledby="process-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="process-heading" class="text-2xl font-bold text-neutral-900 text-center mb-12">
        Unser Arbeitsprozess
      </h2>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          { step: '01', title: 'Beratung', desc: 'Wir besprechen Ihre Wünsche vor Ort und analysieren die Ausgangssituation.' },
          { step: '02', title: 'Angebot', desc: 'Sie erhalten ein detailliertes, unverbindliches Angebot mit Festpreis.' },
          { step: '03', title: 'Ausführung', desc: 'Professionelle Umsetzung mit hochwertigen Materialien und sauberer Arbeit.' },
          { step: '04', title: 'Abnahme', desc: 'Gemeinsame Endkontrolle und Übergabe Ihres fertigen Projekts.' }
        ].map((item) => (
          <div class="relative">
            <div class="text-5xl font-bold text-primary-100 mb-4">{item.step}</div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">{item.title}</h3>
            <p class="text-sm text-neutral-600">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-20 bg-neutral-900" aria-labelledby="cta-heading">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 id="cta-heading" class="text-2xl lg:text-3xl font-bold text-white mb-4">
        Haben Sie Fragen zu unseren Leistungen?
      </h2>
      <p class="text-neutral-400 mb-8">
        Wir beraten Sie gerne persönlich und erstellen Ihnen ein individuelles Angebot.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <WhatsAppButton 
          variant="whatsapp" 
          size="lg"
          message="Hallo, ich habe Fragen zu Ihren Leistungen und möchte mehr erfahren."
        >
          Per WhatsApp schreiben
        </WhatsAppButton>
        <PhoneButton variant="outline" size="lg" class="border-neutral-500 text-white hover:bg-white/10">
          {companyData.phone}
        </PhoneButton>
      </div>
    </div>
  </section>
</Layout>
