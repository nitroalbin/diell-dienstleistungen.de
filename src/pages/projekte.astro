---
import Layout from '@layouts/Layout.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import PhoneButton from '@components/WhatsAppButton.astro';

const pageTitle = 'Projekte | Renovierungsbeispiele Laichingen | Diell Dienstleistungen';
const pageDescription = 'Entdecken Sie unsere abgeschlossenen Renovierungsprojekte in Laichingen und Umgebung. Lassen Sie sich inspirieren für Ihr eigenes Vorhaben!';

const breadcrumbs = [
  { name: 'Projekte', url: '/projekte/' }
];

const projects = [
  {
    title: 'Komplettrenovierung Einfamilienhaus',
    location: 'Laichingen',
    category: 'Renovierung',
    description: 'Umfassende Renovierung eines Einfamilienhauses mit Trockenbau, Spachtelarbeiten und LED-Beleuchtung.',
    image: '/images/projects/Laichingen.jpeg',
  },
  {
    title: 'Moderne Flurgestaltung',
    location: 'Blaustein',
    category: 'Flurgestaltung',
    description: 'Neugestaltung eines Eingangsbereichs mit indirekter Beleuchtung und hochwertigen Oberflächen.',
    image: '/images/projects/Blaustein.jpeg',
  },
  {
    title: 'Büroumbau Gewerbefläche',
    location: 'Ulm',
    category: 'Innenausbau',
    description: 'Trennwände, Deckenverkleidung und Lichtkonzept für moderne Büroräume.',
    image: '/images/projects/Ulm.jpeg',
  },
  {
    title: 'Trockenbau Wohnzimmerdecke',
    location: 'Laichingen',
    category: 'Trockenbau',
    description: 'Abgehängte Decke mit integrierter LED-Lichtvoute und Einbauspots.',
    image: '/images/projects/Laichingen.wohnzimmer.jpeg',
  },
  {
    title: 'Wohnungsrenovierung',
    location: 'Ehingen',
    category: 'Renovierung',
    description: 'Komplette Sanierung einer 3-Zimmer-Wohnung inklusive aller Gewerke.',
    image: '/images/projects/Ehingen.jpeg',
  },
  {
    title: 'Spachtelarbeiten Mehrfamilienhaus',
    location: 'Laichingen',
    category: 'Spachtelarbeiten',
    description: 'Professionelle Oberflächenvorbereitung für mehrere Wohnungen vor dem Malern.',
    image: '/images/projects/Laichingen.spachtel.jpeg',
  },
];
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  breadcrumbs={breadcrumbs}
>
  <section class="bg-neutral-900 py-12 lg:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbs} />
      
      <div class="mt-6 text-center max-w-2xl mx-auto">
        <h1 class="text-3xl lg:text-4xl font-bold text-white mb-4">
          Unsere Projekte
        </h1>
        <p class="text-neutral-400">
          Lassen Sie sich von unseren abgeschlossenen Arbeiten inspirieren. 
          Jedes Projekt ist einzigartig – genau wie Ihr Vorhaben.
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-16 lg:py-20" aria-labelledby="projects-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="projects-heading" class="sr-only">Projektübersicht</h2>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {projects.map((project, index) => (
          <article class="group bg-white rounded-xl overflow-hidden shadow-soft border border-neutral-100 hover:shadow-card transition-all duration-300">
            <!-- Image -->
            <div class="aspect-video bg-gradient-to-br from-neutral-100 to-neutral-200 relative overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
                width="800"
                height="450"
              />
              <!-- Category Badge -->
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-primary-400 text-neutral-900 text-xs font-medium rounded-full">
                  {project.category}
                </span>
              </div>
            </div>
            
            <!-- Content -->
            <div class="p-5">
              <div class="flex items-center gap-2 text-sm text-neutral-500 mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {project.location}
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">
                {project.title}
              </h3>
              <p class="text-sm text-neutral-600">
                {project.description}
              </p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-20 bg-neutral-900" aria-labelledby="cta-heading">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 id="cta-heading" class="text-2xl lg:text-3xl font-bold text-white mb-4">
        Bereit für Ihr eigenes Projekt?
      </h2>
      <p class="text-neutral-400 mb-8">
        Lassen Sie uns gemeinsam Ihre Räume verwandeln. 
        Kontaktieren Sie uns für eine unverbindliche Beratung.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <WhatsAppButton 
          variant="whatsapp" 
          size="lg"
          message="Hallo, ich habe Ihre Projekte gesehen und möchte ein ähnliches Projekt besprechen."
        >
          Per WhatsApp schreiben
        </WhatsAppButton>
        <PhoneButton variant="outline" size="lg" class="border-neutral-500 text-white hover:bg-white/10">
          Anrufen
        </PhoneButton>
      </div>
    </div>
  </section>
</Layout>
