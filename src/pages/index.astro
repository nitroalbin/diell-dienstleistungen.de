---
import Layout from '@layouts/Layout.astro';
import ServiceCard from '@components/ServiceCard.astro';
import TestimonialCard from '@components/TestimonialCard.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import PhoneButton from '@components/PhoneButton.astro';
import { services, additionalServices, companyData, generateFAQSchema } from '@content/company-data';

const pageTitle = 'Renovierung Laichingen | Trockenbau & Innenausbau | Diell Dienstleistungen';
const pageDescription = 'Professionelle Renovierung und Innenausbau in Laichingen. ✓ Trockenbau ✓ Gipskarton-Montage ✓ Spachtelarbeiten ✓ Termintreue ✓ faire Preise. Jetzt Angebot anfordern!';

const faqs = [
  {
    question: 'In welchem Umkreis sind Sie tätig?',
    answer: 'Wir sind in Laichingen und dem gesamten Alb-Donau-Kreis sowie in Ulm und Umgebung tätig. Bei größeren Projekten kommen wir auch darüber hinaus zum Einsatz.'
  },
  {
    question: 'Wie lange dauert eine typische Renovierung?',
    answer: 'Die Dauer hängt vom Umfang des Projekts ab. Ein einzelner Raum kann in 3-5 Tagen fertiggestellt werden, während eine Komplettrenovierung mehrere Wochen in Anspruch nehmen kann. Wir erstellen Ihnen gerne einen detaillierten Zeitplan.'
  },
  {
    question: 'Wie kann ich ein Angebot anfordern?',
    answer: 'Am einfachsten erreichen Sie uns per WhatsApp oder Telefon. Beschreiben Sie uns Ihr Vorhaben – wir melden uns umgehend mit einem unverbindlichen Angebot bei Ihnen.'
  }
];

const testimonials = [
  {
    quote: 'Herr Kuqica hat unsere komplette Wohnung renoviert. Pünktlich, sauber und das Ergebnis ist erstklassig. Sehr empfehlenswert!',
    author: 'Familie Müller',
    location: 'Laichingen',
    service: 'Komplettrenovierung',
    rating: 5
  },
  {
    quote: 'Die Trockenbau-Arbeiten wurden perfekt ausgeführt. Die LED-Beleuchtung in der Decke sieht fantastisch aus. Danke!',
    author: 'Stefan Bauer',
    location: 'Ulm',
    service: 'Trockenbau & LED',
    rating: 5
  },
  {
    quote: 'Schnelle Terminvergabe, faire Preise und hochwertige Arbeit. Mein Flur sieht jetzt viel moderner aus.',
    author: 'Maria Schmidt',
    location: 'Blaustein',
    service: 'Flurgestaltung',
    rating: 5
  }
];

const schema = generateFAQSchema(faqs);
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  schema={schema}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-neutral-900" aria-labelledby="hero-heading">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10" aria-hidden="true">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-400/20 to-accent-400/20"></div>
      <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-400/10 border border-primary-400/20 rounded-full text-primary-300 text-sm font-medium mb-6">
            <span class="w-2 h-2 bg-accent-400 rounded-full animate-pulse"></span>
            Jetzt Termine verfügbar in Laichingen
          </div>
          
          <h1 id="hero-heading" class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight mb-6">
            Renovierung & Innenausbau in <span class="text-primary-400">Laichingen</span>
          </h1>
          
          <p class="text-lg text-neutral-300 mb-8 max-w-xl mx-auto lg:mx-0">
            Professioneller Trockenbau, Gipskarton-Montage und Spachtelarbeiten aus einer Hand. 
            Qualität, Termintreue und faire Preise für Ihr Zuhause.
          </p>
          
          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <WhatsAppButton 
              variant="whatsapp" 
              size="lg"
              message="Hallo, ich interessiere mich für Ihre Renovierungsleistungen in Laichingen. Bitte kontaktieren Sie mich für ein Angebot."
            >
              Per WhatsApp schreiben
            </WhatsAppButton>
            <PhoneButton variant="outline" size="lg" class="border-neutral-500 text-white hover:bg-white/10">
              Anrufen
            </PhoneButton>
          </div>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap items-center justify-center lg:justify-start gap-6 mt-10 text-sm text-neutral-400">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Termintreue</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Feste Preise</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>5 Jahre Erfahrung</span>
            </div>
          </div>
        </div>
        
        <!-- Hero Visual -->
        <div class="relative hidden lg:block">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <div class="aspect-[4/3]">
              <img 
                src="/images/projects/Laichingen.jpeg" 
                alt="Renovierungsprojekt in Laichingen - Abgeschlossene Arbeit"
                class="w-full h-full object-cover"
                width="800"
                height="600"
              />
            </div>
          </div>
          
          <!-- Floating Badge -->
          <div class="absolute -bottom-4 -left-4 bg-white rounded-xl p-4 shadow-card">
            <div class="flex items-center gap-3">
              <div class="flex -space-x-2">
                <div class="w-8 h-8 bg-primary-400 rounded-full flex items-center justify-center text-xs font-bold text-neutral-900">4.9</div>
              </div>
              <div>
                <p class="text-sm font-semibold text-neutral-900">24+ Bewertungen</p>
                <div class="flex text-yellow-400 text-xs">★★★★★</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 lg:py-20" aria-labelledby="services-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 id="services-heading" class="text-2xl lg:text-3xl font-bold text-neutral-900 mb-4">
          Unsere Leistungen
        </h2>
        <p class="text-neutral-600">
          Von der Planung bis zur Fertigstellung – wir begleiten Sie bei Ihrem Renovierungsprojekt 
          mit professionellen Dienstleistungen und höchster Qualität.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((service) => {
          const imageMap = {
            'trockenbau-unterkonstruktion': '/images/trockenbau.jpeg',
            'flurgestaltung': '/images/flurgestaltung.jpeg',
            'gipskarton-led': '/images/gipskarton-led.jpeg',
            'spachtelarbeiten': '/images/spachtelarbeiten.jpeg',
            'renovierung-innenausbau': '/images/renovierung.jpeg',
          };
          return (
            <ServiceCard 
              title={service.shortTitle}
              description={service.description}
              href={`/leistungen/${service.slug}/`}
              icon={service.icon}
              image={imageMap[service.slug]}
            />
          );
        })}
      </div>
      
      <div class="text-center mt-10">
        <a 
          href="/leistungen/"
          class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium text-primary-700 bg-primary-50 hover:bg-primary-100 rounded-lg transition-colors"
        >
          Alle Leistungen ansehen
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 lg:py-20 bg-neutral-50" aria-labelledby="why-us-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 id="why-us-heading" class="text-2xl lg:text-3xl font-bold text-neutral-900 mb-6">
            Warum Diell Dienstleistungen?
          </h2>
          <p class="text-neutral-600 mb-8">
            Als Ihr lokaler Partner für Renovierung und Innenausbau in Laichingen legen wir 
            Wert auf Qualität, Zuverlässigkeit und faire Preise. Jeder Auftrag wird mit 
            größter Sorgfalt ausgeführt.
          </p>
          
          <div class="space-y-4">
            {[
              { title: 'Regionale Expertise', desc: 'Wir kennen Laichingen und die Region – kurze Wege, schnelle Reaktionszeiten.' },
              { title: 'Qualitätsversprechen', desc: 'Saubere Arbeit, hochwertige Materialien und ein makelloses Ergebnis.' },
              { title: 'Transparente Kommunikation', desc: 'Keine versteckten Kosten, klare Absprachen und regelmäßige Updates.' },
              { title: 'Flexible Terminierung', desc: 'Wir passen uns Ihrem Zeitplan an – auch Wochenendarbeit möglich.' }
            ].map((item) => (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">{item.title}</h3>
                  <p class="text-sm text-neutral-600">{item.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="relative">
          <div class="aspect-square bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl flex items-center justify-center">
            <div class="text-center p-8">
              <div class="text-6xl font-bold text-primary-600 mb-2">5+</div>
              <p class="text-neutral-700 font-medium">Jahre Erfahrung</p>
              <div class="mt-6 text-4xl font-bold text-accent-600 mb-2">200+</div>
              <p class="text-neutral-700 font-medium">Abgeschlossene Projekte</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Services -->
  <section class="py-16 lg:py-20" aria-labelledby="additional-services-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="additional-services-heading" class="text-2xl lg:text-3xl font-bold text-neutral-900 text-center mb-12">
        Zusätzliche Services
      </h2>
      
      <div class="grid sm:grid-cols-3 gap-6">
        {additionalServices.map((service) => (
          <div class="text-center p-6 bg-white rounded-xl shadow-soft border border-neutral-100">
            <div class="w-14 h-14 mx-auto mb-4 bg-accent-100 rounded-xl flex items-center justify-center">
              {service.icon === 'wrench' && (
                <svg class="w-7 h-7 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {service.icon === 'leaf' && (
                <svg class="w-7 h-7 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
              {service.icon === 'sparkles' && (
                <svg class="w-7 h-7 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
              )}
            </div>
            <h3 class="font-semibold text-neutral-900 mb-2">{service.title}</h3>
            <p class="text-sm text-neutral-600">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 lg:py-20 bg-neutral-50" aria-labelledby="testimonials-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="testimonials-heading" class="text-2xl lg:text-3xl font-bold text-neutral-900 text-center mb-12">
        Das sagen unsere Kunden
      </h2>
      
      <div class="grid md:grid-cols-3 gap-6">
        {testimonials.map((t) => (
          <TestimonialCard {...t} />
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-20" aria-labelledby="faq-heading">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="faq-heading" class="text-2xl lg:text-3xl font-bold text-neutral-900 text-center mb-8">
        Häufig gestellte Fragen
      </h2>
      
      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <details class="group bg-white rounded-xl shadow-soft border border-neutral-100 overflow-hidden">
            <summary class="flex items-center justify-between p-5 cursor-pointer list-none hover:bg-neutral-50 transition-colors">
              <h3 class="text-base font-semibold text-neutral-900 pr-4">{faq.question}</h3>
              <span class="flex-shrink-0 w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center group-hover:bg-primary-200 transition-colors">
                <svg class="w-5 h-5 text-primary-600 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </span>
            </summary>
            <div class="px-5 pb-5 text-neutral-600 leading-relaxed">
              <div class="pt-2 border-t border-neutral-100">
                <p class="pt-4">{faq.answer}</p>
              </div>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-20 bg-neutral-900" aria-labelledby="cta-heading">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 id="cta-heading" class="text-2xl lg:text-4xl font-bold text-white mb-4">
        Bereit für Ihr Renovierungsprojekt?
      </h2>
      <p class="text-neutral-400 mb-8 max-w-2xl mx-auto">
        Kontaktieren Sie uns jetzt für ein unverbindliches Angebot. 
        Wir freuen uns darauf, Ihre Wünsche zu verwirklichen!
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <WhatsAppButton 
          variant="whatsapp" 
          size="lg"
          message="Hallo, ich möchte ein unverbindliches Angebot für mein Renovierungsprojekt anfordern."
        >
          Per WhatsApp schreiben
        </WhatsAppButton>
        <PhoneButton variant="outline" size="lg" class="border-neutral-500 text-white hover:bg-white/10">
          {companyData.phone}
        </PhoneButton>
      </div>
    </div>
  </section>
</Layout>
