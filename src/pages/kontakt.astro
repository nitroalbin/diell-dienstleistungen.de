---
import Layout from '@layouts/Layout.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import PhoneButton from '@components/WhatsAppButton.astro';
import { companyData, getWhatsAppLink } from '@content/company-data';

const pageTitle = 'Kontakt | Diell Dienstleistungen Laichingen';
const pageDescription = 'Kontaktieren Sie Diell Dienstleistungen für Ihr Renovierungsprojekt in Laichingen. Erreichbar per WhatsApp und Telefon.';

const breadcrumbs = [
  { name: 'Kontakt', url: '/kontakt/' }
];

const whatsappMessage = 'Hallo, ich interessiere mich für Ihre Dienstleistungen und möchte mehr erfahren.';
const whatsappLink = getWhatsAppLink(whatsappMessage);
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  breadcrumbs={breadcrumbs}
>
  <section class="bg-neutral-900 py-12 lg:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbs} />
      
      <div class="mt-6 text-center max-w-2xl mx-auto">
        <h1 class="text-3xl lg:text-4xl font-bold text-white mb-4">
          Kontakt
        </h1>
        <p class="text-neutral-400">
          Haben Sie Fragen oder möchten ein Angebot anfordern? 
          Wir sind für Sie da – schnell und unkompliziert.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="py-16 lg:py-20" aria-labelledby="contact-heading">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="contact-heading" class="sr-only">Kontaktmöglichkeiten</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        <!-- WhatsApp Card -->
        <div class="bg-white rounded-2xl p-8 shadow-card border border-neutral-100 text-center">
          <div class="w-16 h-16 mx-auto mb-6 bg-[#25D366]/10 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[#25D366]" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">
            WhatsApp
          </h3>
          <p class="text-neutral-600 mb-6">
            Der schnellste Weg zu uns. Senden Sie uns eine Nachricht mit Ihrem Anliegen – 
            wir antworten zeitnah.
          </p>
          <WhatsAppButton 
            variant="whatsapp" 
            size="lg"
            fullWidth
            message="Hallo, ich habe folgendes Anliegen: [Ihre Nachricht hier]"
          >
            Per WhatsApp schreiben
          </WhatsAppButton>
          <p class="mt-4 text-sm text-neutral-500">
            {companyData.phone}
          </p>
        </div>
        
        <!-- Phone Card -->
        <div class="bg-white rounded-2xl p-8 shadow-card border border-neutral-100 text-center">
          <div class="w-16 h-16 mx-auto mb-6 bg-primary-100 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">
            Telefon
          </h3>
          <p class="text-neutral-600 mb-6">
            Rufen Sie uns direkt an für eine persönliche Beratung. 
            Wir sind für Sie da und beantworten gerne alle Fragen.
          </p>
          <PhoneButton 
            variant="primary" 
            size="lg"
            fullWidth
          >
            {companyData.phone}
          </PhoneButton>
          <p class="mt-4 text-sm text-neutral-500">
            Telefonische Erreichbarkeit: Mo-Sa 8-18 Uhr
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Details -->
  <section class="py-16 lg:py-20 bg-neutral-50" aria-labelledby="details-heading">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="details-heading" class="text-2xl font-bold text-neutral-900 text-center mb-12">
        Kontaktdaten
      </h2>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Address -->
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-white rounded-xl shadow-soft flex items-center justify-center">
            <svg class="w-6 h-6 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-neutral-900 mb-2">Adresse</h3>
          <address class="not-italic text-neutral-600">
            {companyData.name}<br/>
            {companyData.address.street}<br/>
            {companyData.address.postalCode} {companyData.address.city}
          </address>
        </div>
        
        <!-- Phone -->
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-white rounded-xl shadow-soft flex items-center justify-center">
            <svg class="w-6 h-6 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-semibold text-neutral-900 mb-2">Telefon</h3>
          <p class="text-neutral-600">
            <a href={`tel:${companyData.phone.replace(/\s/g, '')}`} class="hover:text-primary-600 transition-colors">
              {companyData.phone}
            </a>
          </p>
        </div>
        
        <!-- Email -->
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-white rounded-xl shadow-soft flex items-center justify-center">
            <svg class="w-6 h-6 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-semibold text-neutral-900 mb-2">E-Mail</h3>
          <p class="text-neutral-600">
            <a href={`mailto:${companyData.email}`} class="hover:text-primary-600 transition-colors">
              {companyData.email}
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Contact Form Alternative -->
  <section class="py-16 lg:py-20" aria-labelledby="quick-contact-heading">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 id="quick-contact-heading" class="text-2xl font-bold text-neutral-900 mb-4">
        Schnellkontakt
      </h2>
      <p class="text-neutral-600 mb-8">
        Füllen Sie das Formular aus und wir melden uns umgehend bei Ihnen.
        Ihre Daten werden selbstverständlich vertraulich behandelt.
      </p>
      
      <div class="bg-neutral-50 rounded-2xl p-8">
        <form 
          id="contact-form"
          class="space-y-4 text-left"
          onsubmit="event.preventDefault(); window.location.href=getWhatsAppLink();"
        >
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-700 mb-1">
              Ihr Name
            </label>
            <input 
              type="text" 
              id="name" 
              name="name"
              class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-400 focus:border-primary-400 outline-none transition-all"
              placeholder="Max Mustermann"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">
              Ihre Nachricht
            </label>
            <textarea 
              id="message" 
              name="message"
              rows="4"
              class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-400 focus:border-primary-400 outline-none transition-all resize-none"
              placeholder="Beschreiben Sie kurz Ihr Projekt..."
              required
            ></textarea>
          </div>
          
          <WhatsAppButton 
            variant="whatsapp" 
            fullWidth
            size="lg"
            class="mt-4"
          >
            Per WhatsApp schreiben
          </WhatsAppButton>
        </form>
        
        <p class="mt-4 text-xs text-neutral-500">
          Durch das Absenden willigen Sie in die Verarbeitung Ihrer Daten ein. 
          <a href="/datenschutz/" class="underline hover:text-neutral-700">Datenschutzerklärung</a>
        </p>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
  function getWhatsAppLink() {
    const name = document.getElementById('name').value;
    const message = document.getElementById('message').value;
    const fullMessage = `Hallo, ich bin ${name}. ${message}`;
    return `https://wa.me/4915156357966?text=${encodeURIComponent(fullMessage)}`;
  }
  
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    window.open(getWhatsAppLink(), '_blank');
  });
</script>
